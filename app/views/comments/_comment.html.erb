<% unless comment.new_record? %>
  <div class="comment">
    <p><%= comment.body %></p>
    <p><em>posted by 
      <%= comment.creator.username %> 
      <%= comment.created_at %>
    </em></p>
    <% if current_user == comment.creator %>
      <p><%= link_to 'Edit', edit_ticket_comment_path(@ticket, comment) %></p>
    <% end %>
  </div>
<% end %>