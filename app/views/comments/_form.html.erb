<%= form_for [@ticket, @comment] do |f| %>
  <%= render 'shared/form_errors', obj: @comment, name: 'comment' %>

  <div class="field">
    <%= f.label :body, 'Add a comment' %>
    <%= f.text_area :body %>
  </div>

  <div class="field">
    <%= f.label :ticket, 'Update ticket status' %>
    <%= f.select :ticket, Ticket::STATUS, {include_blank: 'Do not change'} %>

  </div>
  <div class="actions">
    <%= f.submit @comment.new_record? ? 'Create Comment' : 'Update Comment' %> or 
    <%= link_to 'Cancel', ticket_path(@ticket) %>
  </div>
<% end %>