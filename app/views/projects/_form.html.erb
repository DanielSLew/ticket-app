<%= form_for @project do |f| %>
  <%= render 'shared/form_errors', obj: @project, name: 'project' %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit(@project.new_record? ? 'Create Project' : 'Update Project') %>
<% end %>